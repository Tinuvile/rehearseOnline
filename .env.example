# AdventureX2025 环境配置文件
# 复制此文件为 .env 并根据需要修改配置

# ===========================================
# ASR (语音识别) 配置
# ===========================================

# ASR服务提供商选择
# 可选值: funasr_local, funasr_cloud, alibaba_cloud, tencent_cloud, baidu_cloud, openai_whisper
ASR_PROVIDER=funasr_local

# 是否使用GPU加速 (true/false)
USE_GPU=true

# 模型缓存目录
MODEL_CACHE_DIR=./models

# 最大音频时长限制（秒）
MAX_AUDIO_DURATION=3600

# ===========================================
# 阿里云语音服务配置 (如果使用 alibaba_cloud)
# ===========================================
ALIBABA_ACCESS_KEY_ID=your_access_key_id
ALIBABA_ACCESS_KEY_SECRET=your_access_key_secret
ALIBABA_REGION=cn-shanghai
ALIBABA_ASR_APP_KEY=your_app_key

# ===========================================
# 腾讯云语音服务配置 (如果使用 tencent_cloud)
# ===========================================
TENCENT_SECRET_ID=your_secret_id
TENCENT_SECRET_KEY=your_secret_key
TENCENT_REGION=ap-shanghai

# ===========================================
# 百度云语音服务配置 (如果使用 baidu_cloud)
# ===========================================
BAIDU_API_KEY=your_api_key
BAIDU_SECRET_KEY=your_secret_key

# ===========================================
# OpenAI Whisper API配置 (如果使用 openai_whisper)
# ===========================================
OPENAI_API_KEY=your_openai_api_key

# ===========================================
# 应用程序配置
# ===========================================

# 应用环境 (development/production)
ENVIRONMENT=development

# 日志级别 (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# 临时文件目录
TEMP_DIR=./temp

# 上传文件目录
UPLOAD_DIR=./uploads

# ===========================================
# 数据库配置 (如果需要)
# ===========================================
DATABASE_URL=sqlite:///./adventure_x.db

# ===========================================
# 安全配置
# ===========================================
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# 功能开关
# ===========================================

# 启用说话人分离
ENABLE_SPEAKER_DIARIZATION=true

# 启用情感分析
ENABLE_EMOTION_ANALYSIS=true

# 启用自动语言检测
ENABLE_AUTO_LANGUAGE_DETECTION=true

# 启用音频预处理
ENABLE_AUDIO_PREPROCESSING=true
